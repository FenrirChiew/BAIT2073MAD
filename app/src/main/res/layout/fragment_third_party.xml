<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.paymentMethod.ThirdPartyFragment">

    <TextView
        android:id="@+id/textViewlabelThirdParty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/labelThirdParty"
        android:textColor="#673AB7"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BackToMerchantbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/backToMerchantButton"
        app:layout_constraintEnd_toEndOf="@+id/textViewlabelThirdParty"
        app:layout_constraintStart_toStartOf="@+id/textViewlabelThirdParty"
        app:layout_constraintTop_toBottomOf="@+id/textViewlabelThirdParty" />
</androidx.constraintlayout.widget.ConstraintLayout>